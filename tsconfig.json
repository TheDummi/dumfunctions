{
    "include": ["src/**/*", "src/*"],
    "exclude": ["node_modules", ".github", "docs"],
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "outDir": "./dist",
        "newLine": "lf",
        "declarationDir": "./types",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
